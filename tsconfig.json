{   
    "compilerOptions": {
        "module": "ESNext",
        "target": "es5",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "outDir": "./dist/",
        "jsx": "react",
        "allowJs": true,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "types": ["react/next", "react-dom/next"],
        "lib": ["dom", "DOM.Iterable", "esnext" ],
        "skipLibCheck": true,
        "resolveJsonModule":true,
        "baseUrl": ".",
        "paths": {
            "@component/*": [
                "src/component/*"
            ],
            "@assets/*": [
                "src/assets/*"
            ]
        }
    },
    "include": ["src"]
}